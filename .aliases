## YAML helpers

function parse_yaml() {
  ruby -ryaml -e "puts YAML.load_file('${1}').to_yaml"
}

function yaml_to_json() {
  ruby -ryaml -rjson -e "puts JSON.pretty_generate(YAML.load_file('${1}'))"
}

function json_to_yaml() {
  ruby -ryaml -rjson -e "puts JSON.parse(File.read('${1}')).to_yaml"
}

