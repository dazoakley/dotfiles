[user]
	name = Darren Oakley
	email = daz.oakley@gmail.com
	signingkey = 9BFB7983C90968BD
[credential]
  helper = osxkeychain
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
	ui = true
[alias]
  st = status
  ci = commit -S
  co = checkout
  br = branch
[merge]
  tool = atom --wait
  summary = true
[core]
  editor = /usr/local/bin/nvim
  excludesfile = ~/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX
[push]
  default = matching
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[gpg]
	program = /usr/local/bin/gpg
[commit]
	gpgsign = true
