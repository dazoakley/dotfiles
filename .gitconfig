[user]
name = Darren Oakley
email = daz.oakley@gmail.com
[credential]
helper = osxkeychain
[color]
diff = auto
status = auto
branch = auto
interactive = auto
ui = true
[alias]
st = status
ci = commit -S
co = checkout
br = branch
[core]
editor = /opt/homebrew/bin/nvim
excludesfile = ~/.gitignore
pager = diff-so-fancy | less --tabs=4 -RFX
[filter "lfs"]
required = true
clean = git-lfs clean -- %f
smudge = git-lfs smudge -- %f
[gpg]
program = /usr/local/MacGPG2/bin/gpg
[commit]
gpgsign = true
[push]
default = simple
[mergetool "smerge"]
cmd = smerge mergetool \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
trustExitCode = true
[pull]
rebase = true
[init]
defaultBranch = main
